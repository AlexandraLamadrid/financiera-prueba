{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "src/**/*.spec.ts",
      "src/**/*.d.ts"
    ]
  }  